@model Actividad5LengProg3.Models.Entities.Recinto

@{
    ViewData["Title"] = "Eliminar Recinto";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i> Eliminar Recinto
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Advertencia:</strong> ¿Está seguro que desea eliminar este recinto?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Código:</dt>
                        <dd class="col-sm-8">@Model.Codigo</dd>

                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>

                        <dt class="col-sm-4">Dirección:</dt>
                        <dd class="col-sm-8">@Model.Direccion</dd>

                        @if (Model.Estudiantes.Any())
                        {
                            <dt class="col-sm-4">Estudiantes:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-info">@Model.Estudiantes.Count estudiante(s)</span>
                            </dd>
                        }
                    </dl>

                    @if (Model.Estudiantes.Any())
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-x-circle-fill"></i>
                            <strong>No se puede eliminar:</strong> Este recinto tiene @Model.Estudiantes.Count estudiante(s) asociado(s).
                        </div>
                        <div class="d-grid">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Volver al Listado
                            </a>
                        </div>
                    }
                    else
                    {
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Codigo" />
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
