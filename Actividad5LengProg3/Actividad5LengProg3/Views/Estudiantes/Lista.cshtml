@model IEnumerable<Actividad5LengProg3.Models.Entities.Estudiante>

@{
    ViewData["Title"] = "Listado de Estudiantes";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <i class="bi bi-people-fill"></i> Listado de Estudiantes
            </h2>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nuevo Estudiante
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Matrícula</th>
                                <th>Nombre</th>
                                <th>Carrera</th>
                                <th>Recinto</th>
                                <th>Turno</th>
                                <th>Becado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var estudiante in Model)
                            {
                                <tr>
                                    <td>@estudiante.Matricula</td>
                                    <td>@estudiante.NombreCompleto</td>
                                    <td>@estudiante.Carrera?.Nombre</td>
                                    <td>@estudiante.Recinto?.Nombre</td>
                                    <td>@estudiante.TurnoEstudiante</td>
                                    <td>
                                        @if (estudiante.Becado)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> @estudiante.PorcentajeBeca%
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-x-circle"></i> No
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm btn-info"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modal@(estudiante.Matricula.Replace(" ", ""))"
                                                title="Ver Detalles">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <a asp-action="Editar" asp-route-matricula="@estudiante.Matricula"
                                           class="btn btn-sm btn-warning" title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Eliminar" asp-route-matricula="@estudiante.Matricula"
                                           class="btn btn-sm btn-danger"
                                           onclick="return confirm('¿Está seguro de eliminar este estudiante?')"
                                           title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>

                                <!-- Modal para ver detalles -->
                                <div class="modal fade" id="modal@(estudiante.Matricula.Replace(" ", ""))" tabindex="-1">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header bg-info text-white">
                                                <h5 class="modal-title">
                                                    <i class="bi bi-person-badge"></i> Detalles del Estudiante
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <dl class="row">
                                                            <dt class="col-sm-5">Matrícula:</dt>
                                                            <dd class="col-sm-7">@estudiante.Matricula</dd>

                                                            <dt class="col-sm-5">Nombre:</dt>
                                                            <dd class="col-sm-7">@estudiante.NombreCompleto</dd>

                                                            <dt class="col-sm-5">Carrera:</dt>
                                                            <dd class="col-sm-7">@estudiante.Carrera?.Nombre</dd>

                                                            <dt class="col-sm-5">Recinto:</dt>
                                                            <dd class="col-sm-7">@estudiante.Recinto?.Nombre</dd>

                                                            <dt class="col-sm-5">Correo:</dt>
                                                            <dd class="col-sm-7">@estudiante.CorreoInstitucional</dd>

                                                            <dt class="col-sm-5">Celular:</dt>
                                                            <dd class="col-sm-7">@estudiante.Celular</dd>
                                                        </dl>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <dl class="row">
                                                            <dt class="col-sm-5">Teléfono:</dt>
                                                            <dd class="col-sm-7">@estudiante.Telefono</dd>

                                                            <dt class="col-sm-5">Dirección:</dt>
                                                            <dd class="col-sm-7">@estudiante.Direccion</dd>

                                                            <dt class="col-sm-5">Fecha Nac.:</dt>
                                                            <dd class="col-sm-7">@estudiante.FechaNacimiento.ToString("dd/MM/yyyy")</dd>

                                                            <dt class="col-sm-5">Género:</dt>
                                                            <dd class="col-sm-7">@estudiante.Genero</dd>

                                                            <dt class="col-sm-5">Turno:</dt>
                                                            <dd class="col-sm-7">@estudiante.TurnoEstudiante</dd>

                                                            <dt class="col-sm-5">Becado:</dt>
                                                            <dd class="col-sm-7">
                                                                @if (estudiante.Becado)
                                                                {
                                                                    <span class="badge bg-success">Sí - @estudiante.PorcentajeBeca%</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge bg-secondary">No</span>
                                                                }
                                                            </dd>
                                                        </dl>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                                <a asp-action="Editar" asp-route-matricula="@estudiante.Matricula" class="btn btn-warning">
                                                    <i class="bi bi-pencil"></i> Editar
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <p class="text-muted">
                        <i class="bi bi-info-circle"></i> Total de estudiantes: <strong>@Model.Count()</strong>
                    </p>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No hay estudiantes registrados.
                </div>
            }
        </div>
    </div>
</div>