@model IEnumerable<Actividad5LengProg3.Models.Entities.Carrera>

@{
    ViewData["Title"] = "Gestión de Carreras";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <i class="bi bi-mortarboard-fill"></i> Gestión de Carreras
            </h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nueva Carrera
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Código</th>
                                <th>Nombre</th>
                                <th>Créditos</th>
                                <th>Materias</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var carrera in Model)
                            {
                                <tr>
                                    <td>@carrera.Codigo</td>
                                    <td>@carrera.Nombre</td>
                                    <td>@carrera.CantidadCreditos</td>
                                    <td>@carrera.CantidadMaterias</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-codigo="@carrera.Codigo"
                                           class="btn btn-sm btn-warning" title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-codigo="@carrera.Codigo"
                                           class="btn btn-sm btn-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No hay carreras registradas.
                </div>
            }
        </div>
    </div>
</div>